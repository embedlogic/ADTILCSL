---
layout: base-layout
---
<main class="post-layout default-blog-theme">
    <article>
        <h1>{{ title }}</h1>
        <div class="article-credit">
            <img src="{{ profils[writer].img }}" alt="Photo de l'auteur" />
            <p><small>
                Écrit par : {{ profils[writer].name }}<br />
                Publié le : {{ page.date | timeFormat }}<br />
                Édité le : {{ updated | timeFormat }}
            </small></p>
        </div>
        {{ content | safe }}
    </article>
</main>