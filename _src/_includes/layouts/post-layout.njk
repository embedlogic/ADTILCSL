---
layout: base-layout
---
<main class="post-layout default-blog-theme">
    <article>
        <header class="article-header">
            <h1>{{ title }}</h1>
            <img src="{{ headerImage | url }}" alt="{{ headerImageAlt }}" />
            <div class="article-credit">
                <img src="{{ profils[writer].img }}" alt="Photo de l'auteur" />
                <p><small><small>
                    {{ profils[writer].name }} - {{ page.date | timeFormat }}<br />
                    Édité le : {{ updated | timeFormat }}
                </small></small></p>
            </div>
        </header>
        {{ content | safe }}
        <br />
        <a href="{{ '/blog/' | url }}">⬅ Retour à la liste des articles</a>
    </article>
</main>